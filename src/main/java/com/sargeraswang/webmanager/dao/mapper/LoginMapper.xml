<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sargeraswang.webmanager.dao.mapper.LoginMapper" >
  <select id="selectUserByLogin" resultType="java.util.HashMap" parameterType="java.util.HashMap">
    SELECT * FROM user_account where loginname=#{loginname} and password=MD5(#{password})
  </select>

</mapper>