<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="springBeanFactoryUtils" class="com.sargeraswang.csmframework.common.util.SpringBeanFactoryUtils"/>
    <bean id="sysProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>classpath:props/sys.properties</value>
            </list>
        </property>
    </bean>

</beans>